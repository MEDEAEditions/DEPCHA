			<!--<script type="text/javascript" src="/lib/1.0/plugins/fancybox_v2.1.5/source/jquery.fancybox.js?v=2.1.5"><xsl:text> </xsl:text></script>-->
		

			<body>
				<header>
					<div class="container">
						<div class="row">
							<div class="col-md-12 col-sm-12">
								<h1>
									<xsl:value-of select="$projectTitle"/>
								</h1>
								<h2 class="d-none d-sm-block">
