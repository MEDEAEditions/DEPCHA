				<script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.13.1/highlight.min.js"><xsl:text> </xsl:text></script>
				
				
				
				
				
			
				
			</head>
			
			
			<!-- matchHeight -->
			<script type="text/javascript" src="/lib/1.0/plugins/matchHeight/jquery.matchHeight.js"><xsl:text> </xsl:text></script>
			<script type="text/javascript" src="/lib/1.0/plugins/matchHeight/matchHeight.js"><xsl:text> </xsl:text></script>
			<!-- datatables.js -->
			<script type="text/javascript" charset="utf8" src="{concat($gamsdev,'/js/datatable.js')}"><xsl:text> </xsl:text></script>
			<!-- databasket -->
			<script type="text/javascript" src="{concat($gamsdev,'/js/databasket.js')}"><xsl:text> </xsl:text></script>
