.navbar{
    margin-bottom:30px;
    border:none;
}

/*Responsive Navbar (Klasse hidden-lg etc.) Dadurch:*/
.navbar-collapse{
    padding-left:0;
    
}

/*damit der aktive punkt auch bei responsive nav ganz hinterlegt ist*/
.navbar-collapse.in ul, .navbar-collapse.collapsing ul{
    
      margin-right:-15px !important;
}
form.navbar-form.navbar-right{
    margin-left: 0;
   
}

ul.nav.navbar-nav{
    margin:0;
}

/*Sticky Navbar*/
#nav {
  width: 100%;
  position:static;
}

#nav.affix {
   position: fixed;
   top: 0;
   z-index:10;
   -webkit-transition: all .6s ease-in-out;
}

/*Searchbox stylish*/
.stylish-input-group .input-group-addon{
    background: white !important;
    border-left:none;
}
.stylish-input-group .form-control{
	border-right:0; 
	box-shadow:0 0 0; 
	border-color:#ccc;
}
.stylish-input-group button{
    border:0;
    background:transparent;
}


/*Dropdown*/


.dropdown-menu>li>a{
    padding: 5px 20px;
}

.dropdown-menu{
    padding: 0;   
    border-style:solid;
    border-color:#e3e3e3;
    border-radius:0;
}

.dropdown-menu>li>a:hover{
    background-color: #e3e3e3;
}

.dropdown-menu>.active>a{
    color: black;
    text-decoration: none;
    background-color: #e3e3e3;  
}

.dropdown-menu>.active>a:hover{
    color: black;
    text-decoration: none;
    background-color: #e3e3e3;
}

.dropdown-menu .divider{
    margin: 0;    
} 

